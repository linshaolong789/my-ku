<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="在这瞬息万变的时代"
        android:textColor="#074CB5"
        android:textSize="16sp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:id="@+id/tv_13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="奋斗的历程尤为可贵"
        android:textColor="#074CB5"
        android:textSize="16sp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:id="@+id/tv_1"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="日月如梭，记忆总会逐渐碎片化一二三"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#074CB5"
        android:textSize="16sp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:id="@+id/tv_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="“口袋”，一款专属您的APP"
        android:textColor="#074CB5"
        android:textSize="16sp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:id="@+id/tv_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="随身携带，记录你的心动时刻"
        android:textColor="#074CB5"
        android:textSize="16sp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:id="@+id/tv_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="让欢乐触手可及"
        android:textColor="#074CB5"
        android:textSize="16sp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:id="@+id/tv_9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="八十岁时，仍可打开‘口袋’重温旧梦"
        android:textColor="#074CB5"
        android:textSize="16sp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:id="@+id/tv_7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="专属您的app，无广告投放；专属您的app，无广告投放"
        android:textColor="#074CB5"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:focusable="true"
        android:focusableInTouchMode="true"/>
    <Button
        android:id="@+id/btn_EditText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册/登录"
        android:textSize="18sp"
        android:textColor="#074CB5"
        android:background="@drawable/bg_btn5"
        android:layout_marginTop="30dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_gravity="center" />
    <ImageView
        android:id="@+id/iv_111"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="#000000"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"/>
